inline function Script_startObjectScriptQuick(var obj, var vrb, var argv, var argc)
{
	var i;
	var arg;
	asm
	{
		pushWordVar .word obj
		pushWordVar .word vrb
	}
	for (i = 0; i < argc; i++)
	{
		arg = argv[i];
		asm
		{
			pushWordVar .word arg
		}
	}
	asm
	{
		pushWordVar .word argc
		startObjectQuick
	}
}

